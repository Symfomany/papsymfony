<!DOCTYPE html>
<html lang="fr" ng-app="addApp">

<head>
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('vendor/plugins/select2/css/core.css') }}">
        <link rel='stylesheet' type='text/css' href='{{ asset("bundles/back/css/theme.css") }}'>
        <link rel='stylesheet' type='text/css' href='{{ asset("dist/css/mainsass.min.css") }}'>
        <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700'>
    {% endblock %}

    <script src="{{ asset("assets/js/angular.min.js") }}"></script>

</head>




<body class="blank-page">


<!-- Start: Main -->
<div id="main">

    <!-- Start: Header -->
    {% include 'BackBundle:Partials:header.html.twig'%}
    <!-- End: Header -->


    <!-- Start: Content-Wrapper -->
    <section id="content_wrapper">


        <!-- Flashdatas -->
        {% include 'BackBundle:Partials:flashdatas.html.twig'%}

        <!-- Start: Topbar-Dropdown -->
        {% include 'BackBundle:Partials:userdropdown.html.twig'%}
        <!-- End: Topbar-Dropdown -->

        <!-- Start: Topbar -->
        {% include 'BackBundle:Partials:breadcrumbbar.html.twig'%}
        <!-- End: Topbar -->


        <!-- Begin: Content -->
        <section id="content" class="animated fadeIn">
            {% block content %}
            {% endblock %}
        </section>
        <!-- End: Content -->


    </section>

    <!-- Start: Right Sidebar -->
    {% include 'BackBundle:Partials:rightsidebar.html.twig'%}
    <!-- End: Right Sidebar -->

</div>
<!-- End: Main -->


{% block javascripts %}

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>

<script src="https://cdn.socket.io/socket.io-1.3.7.js"></script>

<script src="{{ asset("dist/js/moment-with-locales.min.js") }}"></script>
<script src="{{ asset("dist/js/locales.min.js") }}"></script>

<script src="{{ asset("vendor/plugins/pnotify/pnotify.js") }}"></script>
<script src="{{ asset("bundles/back/js/utility/utility.js") }}"></script>
<script src="{{ asset("bundles/back/js/demo/demo.js") }}"></script>
<script src="{{ asset("bundles/back/js/main.js") }}"></script>
<script src="{{ asset("dist/js/angular.min.js") }}"></script>

<script type="text/javascript">
    jQuery(document).ready(function() {

        "use strict";

        // Init Theme Core
        Core.init();

        // launch initialisation
        Demo.init();

        var socket = io('http://127.0.0.1:8081');

        socket.on('notification', function (data) {
            new PNotify({
                title: data.title,
                text: data.objet,
                type: data.criticity,
                shadow: true,
                opacity: 0.80
            });
        });

    });
</script>
<!-- END: PAGE SCRIPTS -->
{% endblock %}

</body>

</html>
